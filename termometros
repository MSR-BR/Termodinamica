  <header>
    <h1>Conversor Visual de Temperatura</h1>
    <p>Arraste o controle para definir a temperatura em <strong>Kelvin</strong> (0 K a 400 K). As leituras aparecem nas três escalas.</p>
  </header>

  <main class="app">
    <section class="control">
      <div class="row" style="margin-bottom:10px">
        <label for="kRange">Temperatura (K):</label>
        <div class="val" id="kLabel">0.00 K</div>
      </div>
      <input id="kRange" type="range" min="0" max="400" step="0.01" value="273.15" aria-label="Controle de temperatura em Kelvin"/>
      <div class="scale-legend" aria-hidden="true">
        <span>0 K (azul)</span>
        <span>400 K (vermelho)</span>
      </div>
    </section>

    <section class="grid" aria-live="polite">
      <!-- Celsius -->
      <article class="card" id="cardC">
        <div class="title">Celsius (°C)</div>
        <div class="thermo-wrap">
          <div class="thermo" aria-hidden="true">
            <div class="mercury" id="fillC"></div>
          </div>
        </div>
        <div class="readout">
          <div class="digital" id="valC">0.00 °C</div>
          <div class="unit hint" id="rngC">Escala exibida: -273.15 °C a 126.85 °C</div>
        </div>
      </article>

      <!-- Fahrenheit -->
      <article class="card" id="cardF">
        <div class="title">Fahrenheit (°F)</div>
        <div class="thermo-wrap">
          <div class="thermo" aria-hidden="true">
            <div class="mercury" id="fillF"></div>
          </div>
        </div>
        <div class="readout">
          <div class="digital" id="valF">32.00 °F</div>
          <div class="unit hint" id="rngF">Escala exibida: -459.67 °F a 260.33 °F</div>
        </div>
      </article>

      <!-- Kelvin -->
      <article class="card" id="cardK">
        <div class="title">Kelvin (K)</div>
        <div class="thermo-wrap">
          <div class="thermo" aria-hidden="true">
            <div class="mercury" id="fillK"></div>
          </div>
        </div>
        <div class="readout">
          <div class="digital" id="valK">273.15 K</div>
          <div class="unit hint" id="rngK">Escala exibida: 0 K a 400 K</div>
        </div>
      </article>
    </section>

    <p class="footer-note">A coluna colorida representa a fração dentro do intervalo mostrado abaixo de cada escala (mapeado de 0–400 K).</p>
  </main>

  <script>
    const range = document.getElementById('kRange');
    const kLabel = document.getElementById('kLabel');

    const valC = document.getElementById('valC');
    const valF = document.getElementById('valF');
    const valK = document.getElementById('valK');

    const fillC = document.getElementById('fillC');
    const fillF = document.getElementById('fillF');
    const fillK = document.getElementById('fillK');

    // Intervalos equivalentes a 0–400 K em cada escala
    const MIN_MAX = {
      C: { min: -273.15, max: 126.85 },
      F: { min: -459.67, max: 260.33 },
      K: { min: 0, max: 400 }
    };

    function kToC(K){ return K - 273.15 }
    function kToF(K){ return (K - 273.15) * 9/5 + 32 }

    function clamp01(x){ return Math.max(0, Math.min(1, x)) }
    function pct(val, {min, max}){ return clamp01((val - min) / (max - min)) }

    function fmt(n, unit){
      // Evita -0.00
      const v = Math.abs(n) < 1e-9 ? 0 : n;
      return `${v.toFixed(2)} ${unit}`
    }

    function update(){
      const K = parseFloat(range.value);
      const C = kToC(K);
      const F = kToF(K);

      // Atualiza rótulo principal e caixas digitais
      kLabel.textContent = fmt(K, 'K');
      valK.textContent   = fmt(K, 'K');
      valC.textContent   = fmt(C, '°C');
      valF.textContent   = fmt(F, '°F');

      // Altura do “mercúrio” conforme o intervalo mostrado sob cada escala
      fillK.style.height = (pct(K, MIN_MAX.K) * 100).toFixed(2) + '%';
      fillC.style.height = (pct(C, MIN_MAX.C) * 100).toFixed(2) + '%';
      fillF.style.height = (pct(F, MIN_MAX.F) * 100).toFixed(2) + '%';

      // Ajusta o anel do knob (opcional: sombra baseada no valor)
      const t = (K - 0) / 400; // 0..1
      const r = Math.round(14 + 30*t);
      document.documentElement.style.setProperty('--accent', `hsl(${200 - 200*t} 90% 60%)`);
    }

    // Inicializa o texto de intervalos (caso queira reutilizar dinâmico)
    document.getElementById('rngC').textContent = `Escala exibida: ${MIN_MAX.C.min.toFixed(2)} °C a ${MIN_MAX.C.max.toFixed(2)} °C`;
    document.getElementById('rngF').textContent = `Escala exibida: ${MIN_MAX.F.min.toFixed(2)} °F a ${MIN_MAX.F.max.toFixed(2)} °F`;
    document.getElementById('rngK').textContent = `Escala exibida: ${MIN_MAX.K.min} K a ${MIN_MAX.K.max} K`;

    range.addEventListener('input', update);
    update(); // primeira renderização
  </script>
</body>
</html>
